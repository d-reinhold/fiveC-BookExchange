$(document).ready ->
  $("body").delegate "table.listings-search tbody tr", "click", (event) ->
    location.href= '/listings/' + @.id
    
  $("body").delegate "#tell-me-more", "click", (event) ->
    $("#listing").fadeOut (event) ->
      $("#listing").css "display", "none"
      $("#new-transaction").css "display", "block"

  $("body").delegate "#back-to-listing-details", "click", (event) ->
    $("#new-transaction").fadeOut (event) ->
      $("#new-transaction").css "display", "none"
      $("#listing").css "display", "block"    
  
  $("body").delegate "#buy-this-book", "click", (event) ->
    $("form#request-book-form").submit()
