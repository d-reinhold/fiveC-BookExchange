<h3> <%= header %> </h3>
<table class="listings-search">
  <thead>
	  <tr>
		  <th>Title</th>
		  <th>Author</th>
		  <th>Price</th>
	  </tr>
	</thead>
  <% relation.each do |listing|%>
    <% if listing.transaction.status == 'available'%>
	    <tr id="<%= listing.id %>">
		    <td><%= listing.title %></td>
	    	<td> <%= listing.author %></td>
	      <td style="text-align: right;">
	        <% if listing.price_cents == 0 %>
	          $<%= listing.price_dollars %>.00 
	        <% else %>
            $<%=listing.price_dollars %>.<%= listing.price_cents %>
          <% end %>
        </td>
	    </tr>
    <% end %>
	<% end %>
</table>