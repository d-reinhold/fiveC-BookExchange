<%= form_tag listings_path, :id => "search", :method => 'get', :remote => true do %>
  <div class="searchbar hidden" id="searchbar-keywords">
    <%= text_field_tag :search_keywords, params[:search_keywords], :placeholder => "Enter a title, author or ISBN!" %> 
  </div>
  <div class="searchbar" id="searchbar-courses">
    <%= text_field_tag :search_courses, params[:search_courses], :placeholder => "Enter a course or professor!" %> 
</div>
<br>
<div id="radios">
	<div class="field centered">Search by course name or professor <%= radio_button_tag :search_type, :courses, true %>
</div><br>
  <div class="field centered">Search by book title, author or ISBN <%= radio_button_tag :search_type, :keywords, false %></div><br>
	<div class="checkboxes centered"><p class="centered" style="font-size:9pt;">Filter courses by school:<br>
	  <%= check_box_tag "school[]", 'PO', true %>Pomona | 
  	<%= check_box_tag "school[]", 'CM', true %>CMC | 
    <%= check_box_tag "school[]", 'SC', true %>Scripps | 
    <%= check_box_tag "school[]", 'HM', true %>Harvey Mudd | 
    <%= check_box_tag "school[]", 'PZ', true %>Pitzer | 
    <%= check_box_tag "school[]", 'JS', true %>Joint Science
	</p></div>
</div>


    <%= render :partial => "shared/fancy_button", :locals => { :button_id => "search-button", :button_class => 'enabled', :text => "Search!"} %>
		<p class="centered" style="font-size:8pt;">Or just click 'Search' to see all books for sale!</p>

<% end %>

