<div class="sell-form-divider">
	<div class="field"><%= l.text_field :isbn, :value => @autofill_isbn, :placeholder => 'ISBN', :class => 'isbn' %></div>
	<div class="field"><%= l.text_field :edition, :value => @autofill_edition, :placeholder => 'Edition', :class => 'edition' %></div>
	<div class="field"><%= l.select( :condition, [['---Condition---', '--Condition--'],['New','New'], ['Lightly Used','Lightly Used'], ['Heavily Used','Heavily Used'], ['Falling Apart','Falling Apart']], :default => '---Condition---') %></div>
	<div class="field"><%= l.text_area :description, :placeholder => 'Give a short description' %></div>
</div>
<div class="sell-form-divider">
  <div class="form-message">
    <p style="font-size:16px;">None of these fields are required, but it's <b>highly recommended that you include the (13-digit) ISBN, to ensure your listing gets found when people search for books by course!</b> This is because your book's title might not exactly match the database (due to abbreviations, misspellings, etc.). If you don't know the ISBN right now, you can also add it later! </p>
    <br>
  </div>
</div>
<div class="clear"></div>
<div id="bottom_button">
<% if signed_in? %>
  <%= render :partial => "shared/fancy_button", :locals => { :button_id => "sell-form-optional-final-button", :button_class => 'enabled', :text => "Post Your Book!"} %>
<% else %>
  <%= render :partial => "shared/fancy_button", :locals => { :button_id => "sell-form-optional-button", :button_class => 'enabled', :text => "Continue!"} %>
<% end %>
</div>
<div class="clear"></div>