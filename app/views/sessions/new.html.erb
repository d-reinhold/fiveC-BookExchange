<h2>Sign In</h2>
<div id="sign-up">
  <%= form_tag sessions_path, :id => 'sign-in-form' do %>
		  <div class="sell-form-divider static">
			  <div class="field">
			    <%= text_field_tag :email, nil, :placeholder => 'Email Address'%>
			  </div>
			  <div class="field">
			    <%= password_field_tag :password, nil, :placeholder => 'Password'%>
			  </div>
			</div>
			<div class="sell-form-divider static">
		    <div class="form-message static"><p>Email Address</p></div>
			  <div class="form-message static"><p>Password</p></div>
			</div>
	  <% end %>
</div>

<div class="clear centered" ><%= render :partial => "shared/fancy_button", :locals => { :button_id => "sign-in-button", :button_class => 'enabled', :text => "Sign in!"} %></div>
