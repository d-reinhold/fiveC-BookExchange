<h1>Sign Up</h1>
<div id="sign-up">
	<%= form_for @user do |f| %>
		  <div class="sell-form-divider">
			  <div class="field">
			    <%= f.text_field :email, :placeholder => "Email Address" %>
			  </div>
			  <div class="field">
			    <%= f.text_field :name, :placeholder => "Full Name" %>
			  </div>
			  <div class="field">
			    <%= f.password_field :password, :placeholder => "Password" %>
			  </div>
			  <div class="field">
			    <%= f.password_field :password_confirmation, :placeholder => "Retype your password"%>
			  </div>
			</div>
			<div class="sell-form-divider">
		    <div class="form-message static"><%=f.label "Email Address"%></div>
			  <div class="form-message static"><%=f.label "Full Name"%></div>
			  <div class="form-message static"><%=f.label "Password"%></div>
				<div class="form-message static"><%=f.label "Password Confirmation"%></div>
			</div>
	  <% end %>
</div>
<br>
<br>
<div class="clear centered" ><%= render :partial => "shared/fancy_button", :locals => { :button_id => "sign-up-button", :button_class => 'enabled', :text => "Sign up!"} %></div>

