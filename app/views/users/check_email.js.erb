$("#sell-form-required-email").fadeOut("slow", function() {
  $("#sell-form-required-email").css("display", "none");
  $("#sell-form-final").css("display", "block");
  <% if @user.new_record? %>
    alert("new record!")
    $("#sell-form-validated-email").html("<%=escape_javascript(render ('shared/sign_up_and_create_listing'))%>");
  <% else %>
    alert("old record!")
    $("#sell-form-validated-email").html("<%=escape_javascript(render ('shared/sign_in_and_create_listing'))%>");
  <% end %>
});