<header>
  <%= link_to 'Campus BookSwap', '/', :class => "header_text" %>

  <nav class="round">
    <ul>
	    <% if signed_in? %>
	      <li><%= link_to "Search/Sell Books!", '/' %></li>•
		    <li><%= link_to "My Books", @current_user %></li>•
	      <li><%= link_to "Sign Out", signout_path %></li>
	    <% else %>
        <li><%=link_to( image_tag('/assets/fb-login-button.png'), '/auth/facebook/?display=popup') %>
		    </li>
      <% end %>
    </ul>
  <% if signed_in? %>
    <p>Signed in as <%=@current_user.name%></p>
	  <% unless @current_user.current_network.nil? %>
      <p>You are currently on the <%= @current_user.current_network%> network!</p>
      <p>You are one of <%= @current_user.networks.find_by_name(@current_user.current_network).users.size %> members from the <%= @current_user.current_network%> </p>
    <% end %>
  <% end %>
  </nav>
	
</header>
