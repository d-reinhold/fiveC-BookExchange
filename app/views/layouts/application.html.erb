<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link href='http://fonts.googleapis.com/css?family=Duru+Sans' rel='stylesheet' type='text/css'>
		<%= stylesheet_link_tag 'blueprint/screen', :media => "screen, projection" %>
		<%= stylesheet_link_tag 'blueprint/print', :media => "print" %>
		<!--[if lt IE8]><%= stylesheet_link_tag 'blueprint/ie' %><![endif] -->
    <%= stylesheet_link_tag "application" %>
	  <%= javascript_include_tag "application" %>
	  <meta property="fb:admins" content="1048504295" />
	  <meta property="og:image" content="<%= request.protocol + request.host_with_port + image_path('book_icon.png')%>" />
	  <%= csrf_meta_tags %>
    <%= yield(:head) %>
    <% if Rails.env.production? %>
			<script type="text/javascript">
		  var _gaq = _gaq || [];
		  _gaq.push(['_setAccount', 'UA-28381592-1']);
		  _gaq.push(['_trackPageview']);
		  (function() {
		    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
		    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
		    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
		  })();
		  </script>
		<%end%>
  </head>
	<body>
		<div class="hidden"><%= image_tag "book_icon.png"%></div>
		<% if Rails.env.staging?%>
	  	<br><br>
	  	<br>
		  <div class="top-banner"><h3>This is the Staging Environment!!</h3></div>
		<%end%>
		<noscript>
			<br><br>
			<br>
		  <div class="top-banner"><h3>This website requires Javascript! Please enable Javascript in your browser.</h3></div>
		</noscript>
		<% if Rails.env.production? %>
			<div id="fb-root"></div>
			<script>
			  (function(d, s, id) {
			    var js, fjs = d.getElementsByTagName(s)[0];
			    if (d.getElementById(id)) return;
			    js = d.createElement(s); js.id = id;
			    js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=112086768880136";
			    fjs.parentNode.insertBefore(js, fjs);
			  }(document, 'script', 'facebook-jssdk'));
			</script>
		<% end %>
	  <div class="container">
		  <%= render 'layouts/header' %>
		  <% if Rails.env.production? %>
		    <div class="fb-like" data-href="http://www.5cbookexchange.com" data-send="false" data-width="450" data-show-faces="false"></div>
	  	<% end %>
			<section class="round">
				<div class="loading">
					<p>Processing request..</p>
				  
				</div>
			  <% flash.each do |key, value| %>
	      <div class="flash <%= key %>">
	        <%= value %>
		    </div>
	      <% end %>	
	      <%= yield %>
      </section>
	    <%= render 'layouts/footer' %>
      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>
